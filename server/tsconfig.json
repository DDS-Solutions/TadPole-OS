{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist/server",
        "rootDir": ".",
        "declaration": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "dist"
    ]
}