{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "./**/*.ts"
    ]
}